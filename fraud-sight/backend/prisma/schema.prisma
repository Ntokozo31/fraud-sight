
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id         Int       @id @default(autoincrement())
  amount     Float
  type       String
  createdAt  DateTime  @default(now())
}

model User {
  id          Int        @id @default(autoincrement())
  name        String
  email       String     @unique
  password    String
  role        String     @default("customer")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
